FROM golang:1.23-alpine AS builder

WORKDIR /app
COPY thaibev-api/go.mod thaibev-api/go.sum ./
RUN go mod download

COPY thaibev-api/ ./
RUN go mod tidy
RUN go build -o main .

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/main .

EXPOSE 8080
CMD ["./main"]